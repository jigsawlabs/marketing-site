<%= form_for(@event) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :day %>
  <%= f.text_field :day %>

  <%= f.label :hours %>
  <%= f.text_field :hours %>

  <%= f.label :time %>
  <%= f.datetime_field :time %>
  <%= f.submit %>
<% end %>
